<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "NoteApp" %></title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <!-- Your Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">NoteApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <% if (typeof userId !== "undefined" && userId) { %>
          <li class="nav-item">
            <a class="nav-link" href="/notes">My Notes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/notes/new">Add Note</a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-outline-light ms-3" href="/logout">Logout</a>
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Sign Up</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mt-4">
    <%- body %>
  </main>

  <footer class="text-center text-muted py-3 mt-auto shadow">
    <div class="container">
      &copy; 2025 NoteApp | Made by Pratyasha Priyadarshini ❤️
    </div>
  </footer>

  <!-- Bootstrap Bundle JS (Popper + Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
